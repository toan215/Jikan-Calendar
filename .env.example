# Database Configuration
# Supported DB_TYPE: sqlserver, postgres
DB_TYPE=postgres
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_SCHEMA=public

# Database Connection (legacy - optional if using above)
# SUPABASE_DB_URL=jdbc:postgresql://host:5432/database

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant Vector Database
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_CLUSTER_URL=your_qdrant_cluster_url_here

# Email Configuration (for password reset, notifications)
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password_or_app_password

# Weather API (weatherapi.com)
API_WEATHER=your_weather_api_key_here

# HuggingFace API Token (for embeddings)
API_TOKEN=your_huggingface_token_here

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Application Port (for deployment)
PORT=8080

# ⚠️ IMPORTANT SECURITY NOTES:
# 1. NEVER commit the actual .env file to Git
# 2. Copy this file to .env and fill in your real values
# 3. Keep .env in your .gitignore
# 4. For production deployment (Render), set these as environment variables in dashboard
# 5. Rotate all API keys if they were accidentally exposed

